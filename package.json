{
  "name": "developer-journal-workspace",
  "version": "1.0.0",
  "description": "Unified MCP server combining Slack, Linear, and Developer Journal",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "developer-journal": "dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --external:better-sqlite3 --external:@linear/sdk --external:@ai-sdk/anthropic --external:@ai-sdk/openai --external:@ai-sdk/google --external:ai --external:@modelcontextprotocol/sdk --external:@modelcontextprotocol/ext-apps --external:chalk --external:zod --external:simple-git && chmod +x dist/index.js",
    "build:tsc": "tsc && chmod +x dist/index.js",
    "build:apps": "vite build --config vite.config.apps.ts",
    "dev": "tsc --watch",
    "dev:apps": "vite build --config vite.config.apps.ts --watch",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "slack",
    "linear",
    "developer-journal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.12",
    "@ai-sdk/google": "^3.0.7",
    "@ai-sdk/openai": "^3.0.9",
    "@linear/sdk": "^38.0.0",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "ai": "^6.0.33",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.3.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.7",
    "simple-git": "^3.25.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^22.10.0",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.3"
  }
}
